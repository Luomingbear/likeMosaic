<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <corners android:radius="15dp" />
            <gradient android:angle="0" android:endColor="@color/color_purple" android:startColor="@color/color_pink" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="15dp" />
            <solid android:color="#6A6C8E" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="15dp" />
            <solid android:color="#7F83C7" />
        </shape>
    </item>
</selector>