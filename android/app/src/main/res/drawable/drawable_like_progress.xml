<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/progress_bg">
        <shape>
            <corners android:radius="5dp" />
            <stroke
                android:width="1dp"
                android:color="#444" />
        </shape>
    </item>

    <item
        android:id="@+id/progress"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="15dp" />
                <gradient
                    android:angle="0"
                    android:endColor="@color/color_purple"
                    android:startColor="@color/color_pink" />
            </shape>
        </scale>
    </item>
</layer-list>