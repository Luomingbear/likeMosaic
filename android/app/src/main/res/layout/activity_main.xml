<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_home"
    android:orientation="vertical"
    tools:context=".home.HomeActivity">

    <FrameLayout
        android:id="@+id/fl_mine_root"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_match_placeholder">

        <androidx.cardview.widget.CardView
            android:id="@+id/fl_mine_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@drawable/icon_match_placeholder"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="75dp"
            app:cardPreventCornerOverlap="false">

        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/drawable_loading" />

    <TextView
        android:id="@+id/btn_match"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_match"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp"
        android:text="@string/start_match"
        android:textColor="@android:color/white"
        android:textSize="16dp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/fl_remote_container"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="75dp"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_match_placeholder" />
    </androidx.cardview.widget.CardView>
</FrameLayout>